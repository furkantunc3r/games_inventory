<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <%- include('navbar', {title: title}) %>
    <br><br>
    <a href="/category/create" class="btn btn-info" role="button" style="margin-left: 45%;">Create New Category</a>
    <br><br>
    <div class="card-deck">
        <% categoryList.forEach((category) => { %>
        <div class="card" style="width: 18rem;">
            <!-- <img src="..." class="card-img-top" alt="..."> -->
            <div class="card-body">
                <h5 class="card-title"><%= category.name %> </h5>
                <p class="card-text"><%= category.description %></p>
                <a href="/category/<%= category.category_id %>" class="btn btn-primary">More</a>
                <a href="/category/update/<%= category.category_id %>" class="btn btn-warning">Update</a>
                <form action="/category/delete/<%= category.category_id %>" method="POST">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </form>
            </div>
        </div>
        <% }); %>
    </div>
</body>

</html>