<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <%- include('navbar', {title: title}) %>
    <br><br>
    <form action="/category/create" method="POST">
        <div class="form-group">
            <label for="categoryName">Category Name</label>
            <input name="categoryName" id="categoryName" class="form-control">
        </div>
        <div class="form-group">
            <label for="categoryDescription">About the category</label>
            <textarea class="form-control" rows="5" name="categoryDescription"></textarea>
        </div>
        <button class="btn btn-warning" type="submit">Create</button>
        <br><br>
        <% if (errors.length > 0) { %>
        <div class="text-danger">
            <% errors.forEach(function(error) { %>
            <p><%= error.msg %></p>
            <% }); %>
        </div>
        <% } %>
    </form>
</body>

</html>